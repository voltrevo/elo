{
  "manifest_version": 2,

  "name": "Language Confidence",
  "description": "Automated ai-driven speech feedback",
  "version": "0.0.0",

  "icons": {
    "50": "assets/icons/logo-symbol-50x50.png"
  },

  "content_security_policy": "script-src 'self'; object-src 'self'",

  "web_accessible_resources": [
    "pageContentScript.bundle.js",
    "css/extension.css"
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "50": "assets/icons/logo-symbol-50x50.png"
    },
    "default_title": "Language Confidence"
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["contentScript.bundle.js"],
    "run_at": "document_start"
  }]
}
